{
    "name": "martin-lechene/itsme-laravel",
    "description": "Laravel package for Itsme authentication using OpenID Connect",
    "type": "library",
    "keywords": [
        "laravel",
        "itsme",
        "authentication",
        "openid-connect",
        "belgium",
        "eid"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/socialite": "^5.0",
        "guzzlehttp/guzzle": "^7.0",
        "firebase/php-jwt": "^6.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "ItsmeLaravel\\Itsme\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ItsmeLaravel\\Itsme\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ItsmeLaravel\\Itsme\\ItsmeServiceProvider"
            ],
            "aliases": {
                "Itsme": "ItsmeLaravel\\Itsme\\Facades\\Itsme"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

