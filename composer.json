{
    "name": "martin-lechene/itsme-laravel",
    "description": "Laravel package for Itsme authentication using OpenID Connect",
    "type": "library",
    "keywords": [
        "laravel",
        "itsme",
        "authentication",
        "openid-connect",
        "belgium",
        "eid"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Martin LechÃªne",
            "email": "martin.lechene@example.com"
        }
    ],
    "homepage": "https://github.com/martin-lechene/itsme-laravel",
    "support": {
        "issues": "https://github.com/martin-lechene/itsme-laravel/issues",
        "source": "https://github.com/martin-lechene/itsme-laravel"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse",
        "format": "php-cs-fixer fix"
    },
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/socialite": "^5.0",
        "guzzlehttp/guzzle": "^7.0",
        "firebase/php-jwt": "^6.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ItsmeLaravel\\Itsme\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ItsmeLaravel\\Itsme\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ItsmeLaravel\\Itsme\\ItsmeServiceProvider"
            ],
            "aliases": {
                "Itsme": "ItsmeLaravel\\Itsme\\Facades\\Itsme"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

